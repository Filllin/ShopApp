<div class="col-md-3"><%= render 'layouts/left_sidebar' %></div>
<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="col-md-10">
        <article role="article" class="node node--page node--full node--page--full">
          <div class="node__content">
            <div class="field--body">
              <% provide(:title, 'Поиск') %>
              <%= search_form_for @search, method: 'get', class: 'navbar-form navbar-right', role: 'search', autocomplete: 'off', url: search_path do |f| %>
                  <div class="form-group">
                    <%= f.text_field :title_or_author_title_or_sub_category_title_cont, placeholder: 'Поиск продуктов', class: 'form-control' %>
                     <br/>
                    <% @sub_categories.find_each do |sub_category| %>
                        <%= check_box_tag('q[sub_category_title_cont_any][]', sub_category.title) %>
                        <%= sub_category.title %>
                    <% end %>
                  </div>
                  <%= f.submit 'Поиск', class: 'btn btn-default' %>
              <% end %>
                <% if @products.present? %>
                    <% @products.find_each do |product| %>
                      <% @title = product.sub_category.category.title %>
                      <div class="col-md-4"><%= image_tag product.image, {height: 90, weight: 90} %>
                      <h5><%= link_to product.title, view_product_path(sub_category: product.sub_category,slug: product.slug) %></h5></div>
                    <% end %>
                <% else %>
                    <p>По вашему запросу ничего не найдено</p>
                <% end %>
            </div>
          </div>
        </article>
      </div>
    </div>
  </div>
</div>
<div class="col-md-3"><%= render 'layouts/right_sidebar' %></div>