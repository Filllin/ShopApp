<div class="panel panel-default">
  <h1 class="custom-title">Оформление заказа</h1>
  <div class="panel-body">
    <% provide(:title, 'Оформление заказа') %>
    <p id="notice"><%= notice %></p>
    <% if @customer_params.present? %>
      <%= @customer_params %>
    <% end %>
    <% @order.order_items.each do |order_item| %>
      <div class="col-md-12 zero-padding text-center">
        <div class="col-md-4 side-padding">
          <h3 class="default-title primary-margin"><%= order_item.product.title %></h3>
        </div>
        <div class="col-md-2 side-padding">
          <p>Цена: </p>
          <p><%= order_item.product.price_cents %> $</p>
        </div>
        <div class="col-md-4 side-padding">
          <p>Количество: </p>
          <p><%= order_item.quantity %></p>
        </div>
        <div class="col-md-2 side-padding">
          <p>Всего: </p>
          <p><%= @entire_amount = order_item.quantity * order_item.product.price_cents %> $</p>
        </div>
      </div>
    <% end %>
    <div class="col-md-7 default-margin">
      <%= render 'layouts/form_create_customer' %>
    </div>
  </div>
</div>