<div class="col-md-3"><%= render 'layouts/left_sidebar' %></div>
<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="col-md-10">
        <h4 id="notice"><%= notice %></h4>
        <% if @orders.present? %>
            <% @orders.each do |order| %>
              <div class="col-md-13">
                <tr>
                <div class="col-md-4">
                  <td><h5><%= link_to order.product.title, view_product_path(sub_category: order.product.sub_category, slug: order.product.slug) %></td></h5>
                  </div>
                <div class="col-md-2">
                  <td><h5>Цена: <%= order.product.price %> грн</h5></td>
                </div>
                <div class="col-md-4">
                  <td><%= form_tag({controller: "customer", action: "update_quantity"}, method: "get") do %>
                        <%= label_tag("Количество") %>
                        <%= number_field_tag :quantity_of_products, order.quantity, class: 'form-control' %>
                        <%= hidden_field_tag :product_title, order.product.title %>
                        <%= submit_tag("Отправить", class: 'btn btn-default') %>
                    <% end %>
                  </td>
                </div>
                <div class="col-md-2">
                  <%= form_tag({controller: "customer", action: "destroy"}, method: "get") do %>
                      <%= hidden_field_tag :product_title, order.product.title %>
                      <%= hidden_field_tag :quantity_of_products, order.quantity %>
                      <%= submit_tag("Удалить", class: 'btn btn-default') %>
                  <% end %>
                </div>
                <div class="col-md-1">
                  <td><h5>Всего: <%= order.quantity*order.product.price %> грн</h5></td>
                </div>
                </tr>
              </div>
            <% end %>
          <%= form_tag({controller: "customer", action: "new"}, method: "get") do %>
              <%= submit_tag("Оформить заказ", class: 'btn btn-default') %>
          <% end %>
        <% else %>
        <p>Ваша корзина пуста</p>
        <% end %>
        </div>
      </div>
    </div>
  </div>
<div class="col-md-3"><%= render 'layouts/right_sidebar' %></div>